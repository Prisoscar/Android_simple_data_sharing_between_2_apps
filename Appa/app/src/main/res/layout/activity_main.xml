<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="80dp"
            android:layout_height="42dp"
            android:hint="number 2"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/mainNum2"
            android:layout_marginLeft="92dp" android:layout_marginStart="92dp"
            app:layout_constraintStart_toEndOf="@+id/mainNum1"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="182dp"/>
    <Button
            android:text="Button send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="340dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="128dp" android:layout_marginStart="128dp"
            android:onClick="sendDataToOtherApp"
            tools:text="Send to app b"/>
    <EditText
            android:layout_width="80dp"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="number 1"
            android:inputType="number"
            android:id="@+id/mainNum1"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="70dp"
            android:layout_marginStart="70dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="182dp"/>
    <TextView
            android:text="num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="79dp"
            android:layout_marginStart="79dp" android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toTopOf="@+id/mainNum1" tools:text="num1"/>
    <TextView
            android:text="num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:layout_marginLeft="144dp" android:layout_marginStart="144dp"
            app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/mainNum2" tools:text="num2"/>
    <TextView
            android:text="Result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/mainResult"
            android:textSize="30sp"
            tools:text="Result" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="71dp"
            android:layout_marginStart="71dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/mainNum1"/>
</androidx.constraintlayout.widget.ConstraintLayout>