<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="ButtonAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonAdd"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="92dp" android:layout_marginStart="92dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="320dp"
            tools:text="Add"/>
    <Button
            android:text="ButtonSubtract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonSubtract"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="320dp" tools:text="Subtract" android:layout_marginEnd="42dp"
            android:layout_marginRight="42dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/num1Recived"
            android:layout_marginBottom="38dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonAdd" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="104dp" android:layout_marginStart="104dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/num2Recived"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonSubtract" android:layout_marginEnd="70dp"
            android:layout_marginRight="70dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="107dp"
            android:layout_marginStart="107dp" android:layout_marginBottom="38dp"
            app:layout_constraintBottom_toTopOf="@+id/num1Recived" tools:text="num1"/>
    <TextView
            android:text="num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            tools:text="num2" android:layout_marginEnd="93dp" android:layout_marginRight="93dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toTopOf="@+id/num2Recived"/>

</androidx.constraintlayout.widget.ConstraintLayout>